<div class="row">
	<div class="offset3 span3">
		<div id="login">

			<% flash.each do |key, value| %>
			<div class="alert alert-informational alert-floating">
				<button type="button" class="close" data-dismiss="alert">Ã—</button>
				<%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
			</div>
			<% end %>
			<%= form_for("user", :url => user_session_path, :html => {:class => "form-vertical well well-raised clearfix"} ) do |f| %>

			<fieldset>
				<legend>User Login 
					<div></div>
					<small>
						<%= link_to('Create an account', new_user_registration_path)  %>
					</small>
				</legend>
				<div class="control-group">
					<label for="email" class="control-label">Email</label>
					<div class="controls">
						<%= f.text_field(:email, :placeholder => "Email", :id => "Email", :class => "input-full", :autofocus => "autofocus") %>
					</div>
				</div>
				<div class="control-group">
					<label for="password" class="control-label">Password</label>
					<div class="controls">
						<%= f.password_field(:password, :placeholder => "Password", :id => "Password", :class => "input-full") %>
					</div>
				</div>
				<%= f.submit('Sign In', :class=>"btn btn-primary btn-large btn-block span3", :id => "sign_in_button") %> 
			</div>
		</div>

	</fieldset>
	<% end %>
</div>
