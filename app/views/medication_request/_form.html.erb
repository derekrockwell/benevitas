<%= form_for @medication_request, :url => medication_request_confirm_path(@medication_request), :method => :put, :html => {:class => "form-vertical"} do |f| %>

<legend>Prescriptions</legend>
<span class="help-block">List your presriptions below:</span>
<div id="prescriptions">

  <div class="items">

    <%= f.nested_fields_for :prescriptions do |f| %>
    <fieldset class="item">
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :name, :class => "span3" %>
          <button type="button" class="close remove" style="float:none" data-dismiss="alert">&times;</button>
        </div>
      </div>

      <%= f.hidden_field :medication_type, :value => "prescribed" %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    </fieldset>
    <% end %>    
  </div>
  <div class="control-group">
    <div class="control">
      <a href="#" class="btn add">
        <i class="icon-large icon-plus"></i> Add More
      </a>
    </div>
  </div>
</div>
<hr />

<legend>Over-the-Counter &amp; Supplements</legend>
<div id="otc">
  <div class="items">
    <%= f.nested_fields_for :otc do |f| %>
    <fieldset class="item">

      <div class="control-group">
        <div class="controls">
          <%= f.text_field :name, :class => "span3" %>
          <button type="button" class="close remove" style="float:none" data-dismiss="alert">&times;</button>
        </div>
      </div>

      <%= f.hidden_field :medication_type, :value => "otc" %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    </fieldset>
    <% end %>    
  </div>
  <div class="control-group">
    <div class="control">
      <a href="#" class="btn add">
        <i class="icon-large icon-plus"></i> Add More
      </a>
    </div>
  </div>
</div>
<hr />

<%= f.submit "Submit Request", :class => "btn btn-large btn-primary btn-block" %>
<% end %>