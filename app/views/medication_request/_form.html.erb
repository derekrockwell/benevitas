<%= form_for @medication_request, :html => {:class => "form-vertical"} do |f| %>

<legend>Prescriptions</legend>
<div id="prescriptions">
  <div class="items">
    <%= f.nested_fields_for :prescriptions do |f| %>
    <fieldset class="item">

      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <div class="input-append">
            <%= f.text_field :name, :class => "span3" %>
            <a href="#" class="btn remove">
              <i class="icon-large icon-remove"></i>
            </a>
          </div>
        </div>
      </div>

      <%= f.hidden_field :medication_type, :value => "prescribed" %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>

      <% end %>

    </fieldset>
  </div>
  <div class="control-group">
    <div class="control">
      <a href="#" class="btn add">
        <i class="icon-large icon-plus"></i>
      </a>
    </div>
  </div>
</div>
<hr />

<legend>Over the Counter and Supplements</legend>
<div id="otc">
  <div class="items">
    <%= f.nested_fields_for :otc do |f| %>
    <fieldset class="item">

      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <div class="input-append">
            <%= f.text_field :name, :class => "span3" %>
            <a href="#" class="btn remove">
              <i class="icon-large icon-remove"></i>
            </a>
          </div>
        </div>
      </div>

      <%= f.hidden_field :medication_type, :value => "otc" %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>

      <% end %>

    </fieldset>
  </div>
  <div class="control-group">
    <div class="control">
      <a href="#" class="btn add">
        <i class="icon-large icon-plus"></i>
      </a>
    </div>
  </div>
</div>
<hr />

<%= f.submit "Submit Request", :class => "btn btn-large btn-primary btn-block" %>
<% end %>